<Header>:
    MDCard:
        size_hint:1,.2
        # md_bg_color:'black'
        pos_hint: {'center_x': 0.5,'center_y': 0.9}
        radius: '0dp' , '0dp' , '30dp','30dp'
        elevation: 1.6
        shadow_softness: 20
        shadow_offset: (-2, 2)
        shadow_color: 0, 0, 1, .8
        MDFloatLayout:
            MDIconButton:
                icon:"brightness-2"
                pos_hint: {'center_x': 0.9,'center_y': 0.7}
                on_press: app.ChangeMode()

            MDIconButton:
                icon:"menu"
                pos_hint: {'center_x': 0.1,'center_y': 0.7}
                # on_press: app.ChangeMode
            MDProgressBar:
                id: progress_bar
                value: 1
                max: 100
                size_hint: .6, .08
                # size: dp(120), dp(120)
                pos_hint: {'center_x': 0.36, 'center_y': 0.2}
            MDLabel:
                text:'S c o r e'
                pos_hint: {'center_x': 0.6, 'center_y': 0.4}
                font_name:'fonts/Poppins-SemiBold.ttf'
                font_size: '15sp'
            MDLabel:
                id: score_label_id
                text:'0'
                pos_hint: {'center_x': 0.82, 'center_y': 0.4}
                font_name:'fonts/Poppins-SemiBold.ttf'
                font_size: '15sp'
            Image:
                source:'images/one.png'
                pos_hint: {'center_x': 0.84, 'center_y': 0.1}
                size_hint: (dp(.75), dp(.75))



